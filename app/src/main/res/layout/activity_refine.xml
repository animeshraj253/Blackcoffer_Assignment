<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RefineActivity">

<!--    title bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44sdp"
        android:background="@color/upper_border"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/backImageBtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/baseline_keyboard_arrow_left_24"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Refine"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Availability"
        android:textColor="@color/upper_border"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/refine_edittext_background"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:padding="@dimen/_2sdp"
        >
        <Spinner
            android:id="@+id/spinnerRefine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your Status"
        android:textColor="@color/upper_border"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <EditText
        android:id="@+id/statusEditTextRefine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:textSize="@dimen/_12sdp"
        android:background="@drawable/refine_edittext_background"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Hi community! I an open to new connections ''ðŸ˜Š''"
        android:textColor="@color/secondaryTextColor"
        android:textColorHint="@color/secondaryTextColor"
        android:padding="@dimen/_8sdp"
        />
    <TextView
        android:id="@+id/maxtextRefine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00/250"
        android:textColor="@color/upper_border"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Hyper Local Distance "
        android:textColor="@color/upper_border"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        />


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="@dimen/_10sdp"
        android:max="100"
        android:progress="50"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:thumb="@drawable/seekbarthumb" />
    <TextView
        android:id="@+id/seekzBarDistanceTxtRefine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 KM"
        android:textColor="@color/upper_border"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Purpose"
        android:textColor="@color/upper_border"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_4sdp"
        />
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_coffee"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_chip_text_color"
                android:text="Coffee"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeColor="@color/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_business"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business"
                android:textColor="@color/selector_chip_text_color"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeColor="@color/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_hobbies"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_chip_text_color"
                android:text="Hobbies"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeColor="@color/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_friendship"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_chip_text_color"
                android:text="Friendship"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeColor="@color/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_movies"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_chip_text_color"
                android:text="Movies"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeColor="@color/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_dinning"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_chip_text_color"
                android:text="Dinning"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeColor="@color/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_dating"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_chip_text_color"
                android:text="Dating"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeColor="@color/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_matrimony"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_chip_text_color"
                android:text="Matrimony"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeColor="@color/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"/>
        </com.google.android.material.chip.ChipGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveBtn"

        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Save and Explore"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"

        />
</LinearLayout>
